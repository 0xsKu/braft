CFLAGS('-g -pipe -Wall -W -fPIC -Wno-unused-parameter -Wno-unused-variable -Wno-strict-aliasing')

CXXFLAGS('-g -pipe -Wall -W -fPIC -Wno-unused-parameter -Wno-unused-variable -Wno-strict-aliasing')
#CXXFLAGS('-fsanitize=address -fno-omit-frame-pointer')

IDLFLAGS('--compack')

UBRPCFLAGS('--compack')

INCPATHS('. ../../../src')

LDFLAGS('-lpthread -lz -ldl -lrt')
#LDFLAGS('-lasan')

CONFIGS('lib2-64/ullib@base')
CONFIGS('public/baidu-rpc@ci-base')

#CONFIGS_32('lib2/ullib')
#CONFIGS_64('lib2-64/ullib')
#
PROTOC('../../../../../third-64/protobuf/bin/protoc')

user_headers = GLOB('src/raft/*.h')

StaticLibrary('raft',Sources(GLOB('../../raft/*.cpp ../../raft/*.cc')),HeaderFiles(user_headers))

Application('test_log_entry',Sources('test_log_entry.cpp'), Libraries('libraft.a'))
